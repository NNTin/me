{
  "name": "WeasyPrint + Jekyll Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.profiles.linux": {
      "bash": {
        "path": "/bin/bash"
      },
      "pwsh": {
        "path": "/usr/bin/pwsh"
      }
    },
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": [
    "ms-python.python",
    "rebornix.Ruby"
  ],
  "containerEnv": {
    "GEM_HOME": "/home/devuser/.gems",
    "PATH": "/home/devuser/.gems/bin:/home/devuser/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "postCreateCommand": "bundle install && pip install -r tools/requirements.txt",
  "remoteUser": "devuser"
}